<Window x:Class="CardBrowser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardBrowser"
        mc:Ignorable="d"
        Title="Card Browser" Height="600" Width="1300">
    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="28*" />
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="82*"/>
            <RowDefinition Height="85" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="553*" />
            <ColumnDefinition Width="327*"/>
        </Grid.ColumnDefinitions>

        <ListView x:Name="listCards" Grid.RowSpan="4" Margin="10,10,10,16" TextElement.FontSize="16">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Picture" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Image Width="120" Source="{Binding BitmapImage}"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Name" Width="380"  DisplayMemberBinding="{Binding Name}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="editButton" Grid.Column="2" Content="Edit" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="1" VerticalAlignment="Top" Height="35" Width="130" FontSize="20"/>
        <Button x:Name="deleteButton" Grid.Column="2" Content="Delete" HorizontalAlignment="Center" Margin="0,25,0,0" Grid.Row="2" VerticalAlignment="Top" Height="35" Width="130" FontSize="20"/>
        <Button x:Name="addButton" Grid.Column="2" Content="Add" HorizontalAlignment="Center" Margin="0,186,0,0" Grid.Row="3" VerticalAlignment="Top" Height="35" Width="130" FontSize="20"/>
        <Button x:Name="uploadButton" Grid.Column="2" Content="Upload" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" Height="35" Width="130" FontSize="20" Margin="0,0,0,0"/>
        <TextBox x:Name="uploadField" HorizontalAlignment="Left" Height="35" Grid.Row="4" TextWrapping="Wrap" Text="Upload" VerticalAlignment="Center" Width="682" FontSize="20" Grid.ColumnSpan="2" Margin="219,0,0,0"/>
        <TextBox x:Name="editField" Grid.Column="2" HorizontalAlignment="Center" Height="32" TextWrapping="Wrap" Text="Edit" VerticalAlignment="Top" Width="242" Margin="0,40,0,0"/>
        <TextBox x:Name="textBox" Grid.Column="1" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="449" Height="47" FontSize="20"/>
        <Image x:Name="image" Grid.Column="1" HorizontalAlignment="Left" Height="337" Margin="52,10,0,0" Grid.RowSpan="3" Grid.Row="1" VerticalAlignment="Top" Width="446"/>
    </Grid>

</Window>
